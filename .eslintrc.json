{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:promise/recommended"
  ],
  "plugins": [
    "promise"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["/tests/*/*.js"],
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreTrailingComments": true
    }],
    "no-param-reassign": "off"
  }
}
