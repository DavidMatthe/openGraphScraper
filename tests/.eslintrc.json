{
  "extends": [
    "../.eslintrc.json",
    "plugin:mocha/recommended"
  ],
  "plugins": [
    "mocha"
  ],
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": "readonly",
    "sinon": "readonly"
  },
  "rules": {
    "func-names": 0,
    "import/extensions": 0,
    "import/no-unresolved": 0,
    "no-console": 0,
    "no-unused-expressions": 0,
    "prefer-arrow-callback": 0,
    "promise/always-return": 0
  }
}
